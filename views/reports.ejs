<script type="text/javascript">
    
    function dates(current) {
        var week= new Array(); 
        // Starting Monday not Sunday
        current.setDate((current.getDate() - current.getDay() ));
        for (var i = 0; i < 7; i++) {
            week.push(
                new Date(current)
            ); 
            current.setDate(current.getDate() +1);
        }
        return week; 
    }
    var week = dates(new Date());
    document.getElementById("d1").innerHTML = "Sunday "+week[0].getUTCMonth()+"/"+week[0].getUTCDate();
    document.getElementById("d2").innerHTML = "Monday "+week[1].getUTCMonth()+"/"+week[1].getUTCDate();
